<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jbilling_php_api_factory.class">JBilling\JbillingAPIFactory</parameter>
    </parameters>

    <services>
        <service id="jbilling_php_api_factory" class="%jbilling_php_api_factory.class%">
            <call method="getApi">
                <argument type="string" id="%jbilling_api.url%" />
                <argument type="string" id="%jbilling_api.username%"/>
                <argument type="string" id="%jbilling_api.password%"/>
            </call>
        </service>
    </services>
</container>
